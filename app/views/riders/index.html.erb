    <th>Citizen</th>
    <th>Emergency contact</th>
    <th>E-contact phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @riders.each do |rider| %>
  <tr>
    <td><%= rider.suspended %></td>
    <td><%= rider.license_number %></td>
    <td><%= rider.last_name %></td>
    <td><%= rider.first_name %></td>
    <td><%= rider.city %></td>
    <td><%= rider.state %></td>
    <td><%= rider.female %></td>
    <td><%= rider.racing_age %></td>
    <td><%= rider.exp_date %></td>
    <td><%= rider.rd_club %></td>
    <td><%= rider.rd_team %></td>
    <td><%= rider.track_club %></td>
    <td><%= rider.track_team %></td>
    <td><%= rider.cx_club %></td>
    <td><%= rider.cx_team %></td>
    <td><%= rider.intl_team %></td>
    <td><%= rider.ncca_club %></td>
    <td><%= rider.road_cat %></td>
    <td><%= rider.track_cat %></td>
    <td><%= rider.cross_cat %></td>
    <td><%= rider.birthdate %></td>
    <td><%= rider.citizen %></td>
    <td><%= rider.emergency_contact %></td>
    <td><%= rider.e-contact_phone %></td>
    <td><%= link_to 'Show', rider %></td>
    <td><%= link_to 'Edit', edit_rider_path(rider) %></td>
    <td><%= link_to 'Destroy', rider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

