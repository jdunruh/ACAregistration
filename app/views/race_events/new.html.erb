<h1>New race_event</h1>
<%=  nested_simple_form_for @race_event do |f|  %>
    <%= f.input :name %>
    <%= f.input :date %>
    <%= f.association :race_type %>
    <%= f.simple_fields_for :races do |r| %>
        <%= r.input :women %>
        <%= r.input :min_age %>
        <%= r.input :max_age %>
        <%= r.input :entry_fee %>
        <%= r.input :min_category %>
        <%= r.input :max_category %>
        <%= r.input :name %>
        <%= r.input :masters %>
        <%= r.input :youth %>
        <%= r.input :u23 %>
        <%= r.input :seniors %>
        <%= r.input :junior %>
        <%= r.input :starting_number %>
        <%= r.input :field_limit %>
        <% end %>
    <% end %>

<%= render 'form' %>

<%= link_to 'Back', race_events_path %>
