<% content_for :head do %>
  <title>New Event</title>
<% end %>
<h1>New Event</h1>
<%=  simple_nested_form_for @race_event do |f|  %>
    <%= f.input :name %>
    <%= f.input :date %>
    <%= f.association :race_type, :label_method => :race_type, :value_method => :id, :include_blank => false %>
    <%= f.simple_fields_for :races %>
    <%= f.link_to_add "Add a race", :races %>
    <%= f.submit 'Add Event' %>
    <% end %>

<%= link_to 'Back', race_events_path %>
